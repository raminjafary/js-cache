{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es5", "scripthost", "es2015.iterable", "es6"],
    "noEmitHelpers": false,
    "types": [
      "@types/node",
      "@types/jest",
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
